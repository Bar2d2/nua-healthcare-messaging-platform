<div class="toast"
     role="alert"
     aria-live="assertive"
     aria-atomic="true"
     data-controller="toast"
     data-toast-auto-dismiss-value="<%= local_assigns[:auto_dismiss] != false %>"
     data-toast-delay-value="<%= local_assigns[:delay] || 3000 %>">
  <div class="toast-header bg-<%= local_assigns[:type] || 'info' %> text-white">
    <strong class="me-auto"><%= local_assigns[:title] || 'Notification' %></strong>
    <small><%= Time.current.strftime("%I:%M %p") %></small>
    <button type="button" class="btn-close btn-close-white" data-action="click->toast#close" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    <%= message %>
  </div>
</div>
